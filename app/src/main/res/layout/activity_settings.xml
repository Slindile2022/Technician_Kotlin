<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProductActivity">

    <!-- toll bar-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/shape_admin">


        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="settings"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />




    </RelativeLayout>

    <!-- switch/disable notifications -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/ntfSwitch"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:text="Push Notifications"/>


        <TextView
            android:id="@+id/notificationStatusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/ntfSwitch"
            android:textColor="#808080"
            android:paddingEnd="10dp"
            android:text="Notifications are disabled"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_below="@+id/notificationStatusTv"/>


    </RelativeLayout>




</LinearLayout>